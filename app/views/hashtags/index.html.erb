<p id="notice"><%= notice %></p>

<h1>Hashtags</h1>
<h2>Random Hashtags</h2>
<br>
<br>
<%= @hashtags.sample(5).collect(&:name).join(" ") %>
<br>
<br>
<h2>Add new hashtags</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hashtags.each do |hashtag| %>
      <tr>
        <td><%= hashtag.name %></td>
        <td><%= link_to 'Show', hashtag %></td>
        <td><%= link_to 'Edit', edit_hashtag_path(hashtag) %></td>
        <td><%= link_to 'Destroy', hashtag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

